{
	"name": "skribi-adifo",
	"displayName": "Skribi Adifo",
	"description": "Skribi Adifo will help you coding Skribi Language",
	"version": "0.0.1",
	"publisher": "skribi-adifo",
	"engines": {
		"vscode": "^1.76.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./extension.js",
	"contributes": {
		"languages": [
			{
				"id": "skribi",
				"extensions": [".skrb"]
			}
		],
		"grammars": [
			{
				"language": "skribi",
				"scopeName": "source.skribi",
				"path": "./syntaxes/skribi.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "skribi-adifo.avor",
				"title": "Avor :)"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.76.0",
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"eslint": "^8.34.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^4.9.5",
		"@vscode/test-electron": "^2.2.3"
	}
}