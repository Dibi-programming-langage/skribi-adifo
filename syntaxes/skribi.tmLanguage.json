{
	"scopeName": "source.skribi",
	"patterns": [
		{"include": "#expression"}
	],
	"repository": {
		"expression": {
			"patterns": [
				{"include": "#string"},
				{"include": "#comment"},
				{"include": "#block-unnamed"},
				{"include": "#block-named"},
				{"include": "#particle"},
				{"include": "#function"},
				{"include": "#keyword"},
				{"include": "#var"},
				{"include": "#numeric"}
			]
		},
		"string": {
			"begin": "\"",
			"end": "\"",
			"name": "string.skribi",
			"patterns": [ {"include": "#string-char-escape"} ]
		},
		"string-char-escape": {
			"match": "\\\\.",
			"name": "constant.character.escape.skribi"
		},
		"comment": {
			"match": "#[^\\n\\r\\f\\v]*",
			"name": "comment.skribi"
		},
		"block-unnamed": {
			"match": "(kodi|spoki|biuli) ?(?={)",
			"name": "keyword.control.block.skribi"
		},
		"block-named": {
			"begin": "(kodi|spoki|biuli)\\s",
			"end": ".(?=[{\\n])",
			"beginCaptures": {
			  "0": { "name": "keyword.control.block.skribi" }
			},
			"name": "string.block-name.skribi"
		},
		"particle": {
			"match": "(ci|lok|nu|bi|pio|mio|galio|pu|fu|ju|su|co|da|med|pur|zo) ",
			"name": "keyword.control.particle.skribi"
		},
		"function": {
			"match": "[a-zA-Z]\\w*(?=[\\(:])",
			"name": "entity.name.function.skribi"
		},
		"keyword": {
			"match": "(int|dar|skr|ioi|ioial|noial)\\s",
			"name": "keyword.skribi"
		},
		"var": {
			"match": "[a-zA-Z]\\w*",
			"name": "variable.skribi"
		},
		"numeric": {
			"match": "-?\\d+(?:\\.\\d+)?",
			"name": "constant.numeric.skribi"
		}
	}
}